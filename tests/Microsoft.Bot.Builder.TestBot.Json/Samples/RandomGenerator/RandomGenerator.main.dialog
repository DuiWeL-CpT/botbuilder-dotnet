{
    "$schema": "../../testbot.schema",
    "$kind": "Microsoft.AdaptiveDialog",
    "triggers": [
        {
            "$kind": "Microsoft.OnBeginDialog",
          "actions": [
            {
              "$kind": "Microsoft.EmitEvent",
              "eventName": "setTestOptions",
              "EventValue": {
                "randomSeed": 100
              }
            },
            {
              "$kind": "Microsoft.SendActivity",
              "activity": "test options: ${conversation.testOptions}"
            },
            {
              "$kind": "Microsoft.EmitEvent",
              "eventName": "setTestOptions",
              "EventValue": {
                "randomValue": 20
              }
            },
            {
              "$kind": "Microsoft.SendActivity",
              "activity": "test options: ${conversation.testOptions}"
            },
            {
              "$kind": "Microsoft.SendActivity",
              "activity": "${rand(1, 30)}"
            }
          ]
        }
    ]
}